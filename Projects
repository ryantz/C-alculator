#include <stdio.h>
#include <stdlib.h>

int main(int argc, char** argv){
	int input1, input2, result= 0;
	char op;

	puts("Please input your values");
	scanf("%d%c%d", &input1, &op, &input2);
	
	if(input1 != 0){
					switch(op){
									case '*': result = input1 * input2;
														printf("%d\n", result);
														break;
									
									case '+': result = input1 + input2;
														printf("%d\n", result);
														break;

									case '-': result = input1 - input2;
														printf("%d\n", result);
														break;

									case '/': result = input1 / input2;
														printf("%d\n", result);
														break;
									
									default: puts("please input a proper number");
					}
	}
	
}	
													
	
	
